# Database Configuration
# Replace with your actual MySQL database URL
# Format: mysql://username:password@hostname:port/database_name
DATABASE_URL="mysql://root:password@localhost:3306/store_online"

# JWT Secret Key
# Generate a secure random string for production
# You can use: openssl rand -base64 32
JWT_SECRET="your-super-secure-jwt-secret-key-replace-this-in-production"

# Server Configuration
PORT=5001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Email Configuration (Optional - for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Upload Configuration (Optional)
# UPLOAD_DIR=uploads
# MAX_FILE_SIZE=5242880

# Rate Limiting (Optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Security Headers (Optional)
# ENABLE_HELMET=true
# ENABLE_CORS_CREDENTIALS=true

# Logging Configuration (Optional)
# LOG_LEVEL=info
# LOG_FILE=logs/app.log

# Redis Configuration (Optional - for sessions/caching)
# REDIS_URL=redis://localhost:6379

# Payment Gateway Configuration (Optional - for future features)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Cloud Storage Configuration (Optional - for image uploads)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-west-2
# AWS_S3_BUCKET=your-s3-bucket-name

# Analytics Configuration (Optional)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
